{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.tauri.app" },
        { "url": "http://10.0.2.2:8080/*" },
        { "url": "http://127.0.0.1:8080/*" }
      ],
      "deny": [{ "url": "https://private.tauri.app" }]
    },
    "core:default",
    "opener:default",
    "http:default"
  ]
}